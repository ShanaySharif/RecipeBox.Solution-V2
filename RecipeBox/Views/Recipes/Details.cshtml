@{
  Layout = "_Layout";
}

@using RecipeBox.Models
@model RecipeBox.Models.Recipe

<h3>@Html.DisplayNameFor(model => model.Ingredients): @Html.DisplayFor(model => model.Ingredients)</h3>  
<h3>@Html.DisplayNameFor(model => model.Instructions): @Html.DisplayFor(model => model.Instructions)</h3>
<h3>@Html.DisplayNameFor(model => model.TagId): @Html.DisplayFor(model => model.TagId)</h3>


@if(@Model.JoinEntities.Count == 0)
{
  <p>This recipe does not have any Instructions yet!</p>
}
else
{
  <h4>These are the Ingredients and Instructions for:</h4>
  <ul>
  @foreach(RecipeTag join in Model.JoinEntities)
  {
    <li>Tag: @join.Tag.Title</li>
    @using (Html.BeginForm("DeleteJoin","Recipes"))


    @Html.Hidden("joinId", @join.RecipeTagId)
    <input type="submit" value="Delete"/>

  }
  </ul>

<p>@Html.ActionLink("Add an Ingredient", "AddRecipe", new { id = Model.RecipeId })</p>
<p>@Html.ActionLink("Add a Tag", "Edit", new { id =Model.TagId})</p>
<p>@Html.ActionLink("Back Home", "Index")</p>


}